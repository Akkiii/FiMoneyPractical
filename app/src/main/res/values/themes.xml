<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FiMoneyDemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#282828</item>
        <item name="android:navigationBarColor">#282828</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#282828</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#8D8D8D</item>
    </style>

    <style name="TabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FiMoneyLoaderV2">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_rawRes">@raw/loader</item>
        <item name="lottie_colorFilter">@color/white</item>
        <item name="lottie_loop">true</item>
    </style>

    <style name="ShapeImage_Corner12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12%</item>
        <item name="cornerSizeTopRight">12%</item>
    </style>

    <style name="ShapeImage_Corner10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="Theme.FiMoney.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:backgroundDimAmount">0.75</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearance">@null</item>
    </style>
</resources>